generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "mysql"
}

model User {
  id         Int          @id @default(autoincrement())
  name       String
  email      String
  role       Role         @default(MEMBER)
  userBidang UserBidang[]
  createdAt  DateTime     @default(now())
}

model UserBidang {
  id          Int        @id @default(autoincrement())
  userId      Int
  user        User       @relation(fields: [userId], references: [id])
  divisions   Divisions? @relation(fields: [divisionsId], references: [id])
  divisionsId Int

  @@unique([userId, divisionsId])
}

model Divisions {
  id         Int          @id @default(autoincrement())
  name       Nama
  userBidang UserBidang[]
}

enum Nama {
  Pemrograman
  Multimedia
  Jaringan
  Science
  IoT
  AI
}

enum Role {
  MAHASISWA
  ADMIN
  MEMBER
}
